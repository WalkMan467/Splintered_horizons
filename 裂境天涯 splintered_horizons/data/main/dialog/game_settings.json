{
  "type": "minecraft:multi_action",
  "title": {
    "translate": "dialog.main.game_settings.title",
    "fallback": "Game Settings"
  },
  "inputs": [
    {
      "type": "minecraft:single_option",
      "key": "daytime",
      "label": {
        "translate": "dialog.main.daytime",
        "fallback": "Day Time"
      },
      "label_visible": true,
      "options": [
        {
          "id": "1",
          "display": {
            "translate": "dialog.main.daytime.eternal_night",
            "fallback": "Eternal Night"
          },
          "initial": true
        },
        {
          "id": "2",
          "display": {
            "translate": "dialog.main.daytime.cycles",
            "fallback": "Cycles"
          }
        },
        {
          "id": "3",
          "display": {
            "translate": "dialog.main.daytime.eternal_day",
            "fallback": "Eternal Day"
          }
        }
      ]
    },
    {
      "type": "minecraft:single_option",
      "key": "tombstone_system",
      "label": {
        "translate": "dialog.main.tombstone_system",
        "fallback": "死亡墓碑系統",
        "color": "white"
      },
      "options": [
        {
          "id": "2",
          "display": {
            "translate": "dialog.main.disabled",
            "fallback": "關閉",
            "color": "dark_red"
          },
          "initial": true
        },
        {
          "id": "1",
          "display": {
            "translate": "dialog.main.enabled",
            "fallback": "開啟",
            "color": "dark_green"
          }
        }
      ]
    }
  ],
  "can_close_with_escape": true,
  "pause": true,
  "after_action": "close",
  "actions": [
    {
      "label": {
        "translate": "dialog.main.confirm",
        "fallback": "確認"
      },
      "action": {
        "type": "minecraft:dynamic/run_command",
        "template": "function main:game_settings/use {daytime:\"$(daytime)\",tombstone_system:\"$(tombstone_system)\"}"
      }
    }
  ]
}