{
  "type": "minecraft:confirmation",
  "title": {
    "translate": "dialog.main.game_settings.title",
    "fallback": "Game Settings"
  },
  "inputs": [
    {
      "type": "minecraft:single_option",
      "key": "daytime",
      "label": {
        "translate": "dialog.main.daytime",
        "fallback": "Day Time"
      },
      "label_visible": true,
      "options": [
        {
          "id": "1",
          "display": {
            "translate": "dialog.main.daytime.eternal_night",
            "fallback": "Eternal Night"
          },
          "initial": true
        },
        {
          "id": "2",
          "display": {
            "translate": "dialog.main.daytime.cycles",
            "fallback": "Cycles"
          }
        },
        {
          "id": "3",
          "display": {
            "translate": "dialog.main.daytime.eternal_day",
            "fallback": "Eternal Day"
          }
        }
      ]
    }
  ],
  "can_close_with_escape": true,
  "pause": true,
  "after_action": "close",
  "yes": {
    "label": {
      "translate": "dialog.main.confirm",
      "fallback": "Confirm"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "trigger main.trigger set $(daytime)"
    }
  },
  "no": {
    "label": {
      "translate": "dialog.main.cancel",
      "fallback": "Cancel"
    }
  }
}